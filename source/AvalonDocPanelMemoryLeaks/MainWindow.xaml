<Window
    x:Class="AvalonDocPanelMemoryLeaks.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AvalonDocPanelMemoryLeaks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xcad="https://github.com/Careys-Freight/AvalonDock"
    xmlns:avalonDock="clr-namespace:AvalonDock;assembly=AvalonDock"
    xmlns:layout="clr-namespace:AvalonDock.Layout;assembly=AvalonDock"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Click="Button_Click"
            Content="Add" />
        <avalonDock:DockingManager Name="dockM" Grid.Row="1">
            <layout:LayoutRoot>
                <layout:LayoutPanel>
                    <layout:LayoutDocumentPaneGroup>
                        <layout:LayoutDocumentPane x:Name="docGrup" />
                    </layout:LayoutDocumentPaneGroup>
                </layout:LayoutPanel>
            </layout:LayoutRoot>
        </avalonDock:DockingManager>
    </Grid>
</Window>
